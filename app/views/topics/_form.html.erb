<%= form_for [topic] do |f| %>

  <% if topic.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(topic.errors.count, "error") %></h4>
      <ul>
        <% topic.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>    
    </div>
  <% end %>
  
  <%= form_group_tag(topic.errors[:title]) do %>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', placeholder: "Enter Topic title" %>
  <% end %>
  
  <%= form_group_tag(topic.errors[:body]) do %>
    <%= f.label :body %>
    <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter Topic description" %>
  <% end %>
  
  <div class="form-group">
    <%= f.submit "POST IT!", class: 'btn btn-success' %>
  </div>

<% end %>