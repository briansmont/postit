<h1>All Topics</h1>


<div class="row">
  <div class="col-md-4">
    <%= link_to "New Topic", new_topic_path(@topic), class: 'btn btn-success' %>
  </div>
</div>

<% @topics.each do |topic| %>
  <div class="media">
    <div class="media-body">
      <h5 class="media-heading">
        <%= link_to topic.title, topic %> <small>posted by <b><%= topic.user.email %></b> about <b><%= time_ago_in_words(topic.created_at) %> ago</b></small>
      </h5>
    </div>
  </div>

<% end %>