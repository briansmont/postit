<h4>Comment on this post!</h4>

<%= form_for [post, comment] do |f| %>
  <div class="form-group">
    
    <%= f.label :body, class: 'sr-only' %>
    <%= f.text_field :body, class: 'form-control', placeholder: "Write something new!" %>
  </div>
  
  <%= f.submit "POST IT!", class: 'btn btn-default pull-right' %>

<% end %>